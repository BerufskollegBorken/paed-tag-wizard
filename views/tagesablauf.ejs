<html lang="de">
    <head>
        <meta charset="UTF-8">        
        <link rel="stylesheet" href="styles.css">          
    </head>
    <body>   
            <div class="alert">
                <h1><%= themaDesTages %></h1>            
                <h2><%= tagesablauf.titel %></h2>                    
                <p><%= tagesablauf.beschreibung %></p>
            </div>    
            <div class="center">
                <% if(tagesablauf){ %>                            
                    <% for(var i=0; i < tagesablauf.length; i++) {%>
                        <hr>
                        <h2><%- tagesablauf[i].von %>-<%- tagesablauf[i].bis %></h2>
                        <h2><%- tagesablauf[i].thema %></h2>                        
                        <p><%- tagesablauf[i].beschreibung %></p>                                            
                    <% } %>                                                
                    <% } %> 
                    <hr>
                </div>                    
            <div>
                <a href="/" class="button backHome">Zurück zur Startseite</a>                
            </div>    
            <div class="signature" >            
              <p>Made with <i class="much-heart"></i> by GW12A & Stefan Bäumer</p>
            </div>          
    </body>
</html>